<!DOCTYPE html>
<html lang="en">
<head>
  <title>Report Absensi - Pengguna</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">

  <!-- Navbar -->
  <nav class="bg-white shadow-md p-4 sticky top-0 z-10">
    <div class="flex flex-wrap gap-4 md:gap-6">
      <a href="/" class="text-gray-700 hover:text-blue-600">Home</a>
      <a href="/gps" class="text-gray-700 hover:text-blue-600">Absensi GPS</a>
      <a href="/qr" class="text-gray-700 hover:text-blue-600">QR Code</a>
      <a href="/report" class="font-bold text-blue-600">Report</a>
      <a href="/manual" class="text-gray-700 hover:text-blue-600">Absen Manual</a>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mx-auto p-4 md:p-8">
    <h1 class="text-2xl font-bold mb-6">Report Absensi Kehadiran</h1>

    <!-- Biodata User -->
    <div class="bg-white p-4 rounded-lg shadow-md mb-6 border-l-4 border-blue-500">
      <p class="text-gray-700"><strong>Nama:</strong> <%= nama %></p>
      <p class="text-gray-700"><strong>NIM:</strong> <%= nim %></p>
         </div>

    <!-- Tabel Absensi -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Batch</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Waktu</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (data.length === 0) { %>
              <tr>
                <td colspan="4" class="px-4 py-4 text-center text-gray-500">Belum ada data absensi</td>
              </tr>
            <% } else { %>
              <% data.forEach(item => { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-4 py-4 whitespace-nowrap"><%= item.batch %></td>
                  <td class="px-4 py-4 whitespace-nowrap"><%= item.tanggal %></td>
                  <td class="px-4 py-4 whitespace-nowrap"><%= item.waktu %></td>
                  <td class="px-4 py-4 whitespace-nowrap">
                    <% if (item.status === 'Hadir') { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                        <%= item.status %>
                      </span>
                    <% } else if (item.status === 'Terlambat') { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                        <%= item.status %>
                      </span>
                    <% } else { %>
                      <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                        <%= item.status %>
                      </span>
                    <% } %>
                  </td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>
</html>
