            background-color: #2563eb;
            color: white;
        }
        .icon-badge {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            background-color: #ef4444;
            color: white;
            border-radius: 9999px;
            width: 22px;
            height: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            font-weight: bold;
        }
        .sidebar-mini .nav-text {
            display: none;
        }
        .sidebar-mini .sidebar-header span {
            display: none;
        }
        .sidebar-mini .user-name {
            display: none;
        }
        .sidebar-mini .logout-text {
            display: none;
        }
        .sidebar-mini .icon-badge {
            right: 6px;
        }
        .sidebar-mini .nav-menu li a {
            justify-content: center;
            padding: 12px;
        }
        .sidebar-mini .nav-menu li a span {
            margin-right: 0;
        }
        .sidebar-mini .user-avatar {
