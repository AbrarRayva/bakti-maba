<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style type="text/tailwindcss">
        @theme {
            --color-primary-purple: #6a0dad;
            --color-primary-purple-dark: #5a0a9d;
        }
        /* Custom styles if Tailwind doesn't cover everything */
        .map-image-container {
            position: relative;
            width: 700px;
            height: 500px;
            overflow: hidden;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            cursor: crosshair;
        }
        .map-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .activity-marker {
            position: absolute;
            width: 35px; /* Larger pin */
            height: 35px; /* Larger pin */
            background-image: url('/img/location_pin_black.png'); /* Black pin as per UI */
            background-size: cover;
            transform: translate(-50%, -90%); /* Adjust to put pin bottom at coords */
            cursor: pointer;
            z-index: 10;
        }
        .activity-list li .pin-icon {
            width: 20px;
            height: 20px;
            background-image: url('/img/location_pin_black.png'); /* Small pin icon for list */
            background-size: cover;
            flex-shrink: 0;
        }
    </style>
    <title>Peta Kampus (Panitia)</title>
</head>
<body class="bg-gray-100 flex">
    <%- include('../../partials/sidebar_admin') %>
    <div class="ml-64 flex-1 p-8">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">Peta Universitas Andalas</h1>

        <div class="flex space-x-8">
            <div id="campusMap" class="map-image-container">
                <img src="/images/peta_unand.jpeg" alt="Peta Universitas Andalas" class="w-full h-full object-cover">
                </div>

            <div class="flex-1 bg-white rounded-xl shadow-md p-6 max-w-xs">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-2xl font-semibold text-gray-800">Activity</h2>
                    <button id="addActivityBtn" class="bg-purple-500 hover:bg-primary-purple-dark text-white text-xl w-8 h-8 rounded-full flex items-center justify-center transition-colors">
                        +
                    </button>
                </div>
                <ul class="space-y-4">
                    <% activities.forEach(activity => { %>
                        <li data-id="<%= activity.id %>" data-x="<%= activity.coords.x %>" data-y="<%= activity.coords.y %>"
                            class="bg-gray-50 p-4 rounded-lg shadow-sm flex items-center space-x-3">
                            <div class="pin-icon"></div>
                            <div class="flex-1">
                                <p class="font-semibold text-gray-800"><%= activity.title %></p>
                                <p class="text-gray-600 text-sm"><%= activity.tempat %></p>
                                <p class="text-gray-600 text-sm"><%= activity.waktu %></p>
                            </div>
                            <div class="flex flex-col space-y-1">
                                <a href="/admin2/campus/<%= activity.id %>/edit" class="text-sm text-blue-500 hover:underline">Edit</a>
                                <form action="/admin2/campus/<%= activity.id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="text-sm text-red-500 hover:underline" onclick="return confirm('Apakah Anda yakin ingin menghapus kegiatan ini?');">Hapus</button>
                                </form>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </div>
    </div>

    <script>
        const activities = <%- JSON.stringify(activities) %>;
        const campusMap = document.getElementById('campusMap');
        const addActivityBtn = document.getElementById('addActivityBtn');
        const mapImage = campusMap.querySelector('img');

        function renderMarkers() {
            campusMap.querySelectorAll('.activity-marker').forEach(marker => marker.remove());

            activities.forEach(activity => {
                const marker = document.createElement('div');
                marker.className = 'activity-marker';
                marker.style.left = `${activity.coords.x}px`;
                marker.style.top = `${activity.coords.y}px`;
                marker.title = `${activity.title} (${activity.waktu})`;
                marker.dataset.id = activity.id;

                marker.addEventListener('click', (e) => {
                    e.stopPropagation(); // Prevent map click from firing
                    alert(`Kegiatan: ${activity.title}\nWaktu: ${activity.waktu}`);
                });
                campusMap.appendChild(marker);
            });
        }

        campusMap.addEventListener('click', (e) => {
            const rect = campusMap.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            window.location.href = `/admin/campus/add?x=${x}&y=${y}`;
        });

        addActivityBtn.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent map click from firing
            window.location.href = '/admin/campus/add';
        });

        mapImage.onload = renderMarkers;
        if (mapImage.complete) {
            renderMarkers();
        }
    </script>
</body>
</html>