<div class="flex justify-between items-center mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-800">Manage Campus Activities</h1>
        <p class="text-gray-600">Add, edit, or remove activities displayed on the map.</p>
    </div>
    <a href="/admin/campus/new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition-colors">
        + Add Activity
    </a>
</div>

<% if (locals.success_msg && success_msg.length > 0) { %>
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded-md" role="alert">
        <p><%= success_msg %></p>
    </div>
<% } %>
<% if (locals.error_msg && error_msg.length > 0) { %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded-md" role="alert">
        <p><%= error_msg %></p>
    </div>
<% } %>

<div class="flex flex-col md:flex-row gap-6">
    <!-- Map View -->
    <div class="flex-grow md:w-2/3 bg-white p-4 rounded-xl shadow-md">
        <div id="campusMap" class="relative w-full h-[500px] md:h-[600px] overflow-hidden rounded-lg">
            <img src="/images/peta_unand.jpeg" alt="Peta Kampus" class="w-full h-full object-contain">
            <!-- Markers will be injected by script -->
        </div>
    </div>

    <!-- Activity List -->
    <div class="md:w-1/3">
        <div class="bg-white p-4 rounded-xl shadow-md h-full">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Activity List</h2>
            <ul class="space-y-3 h-[550px] overflow-y-auto pr-2">
                <% if (activities && activities.length > 0) { %>
                    <% activities.forEach(activity => { %>
                        <li data-id="<%= activity.id_kegiatan %>"
                            class="activity-item bg-gray-50 p-3 rounded-lg border-l-4 border-gray-200 hover:bg-gray-100 transition-colors">
                             <div class="flex justify-between items-start">
                                <div>
                                    <p class="font-semibold text-gray-800"><%= activity.nama_kegiatan %></p>
                                    <p class="text-sm text-gray-600"><%= activity.Lokasi ? activity.Lokasi.nama_lokasi : 'No Location' %></p>
                                    <p class="text-xs text-gray-500 mt-1">
                                        <%= new Date(activity.tanggal).toLocaleDateString('id-ID', { dateStyle: 'medium' }) %> - <%= activity.waktu_mulai %>
                                    </p>
                                </div>
                                <div class="flex-shrink-0 ml-2 flex items-center space-x-3">
                                    <a href="/admin/campus/<%= activity.id_kegiatan %>/edit" class="text-yellow-600 hover:text-yellow-800" title="Edit">
                                         <i data-lucide="edit" class="w-4 h-4"></i>
                                    </a>
                                    <form action="/admin/campus/<%= activity.id_kegiatan %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this activity?');" class="inline">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button type="submit" class="text-red-600 hover:text-red-800" title="Delete">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li class="text-center text-gray-500 py-4">No activities scheduled.</li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<style>
.activity-marker {
    position: absolute;
    width: 20px;
    height: 20px;
    background: #3b82f6; /* blue-500 */
    border-radius: 50%;
    border: 2px solid white;
    transform: translate(-50%, -50%);
    transition: all 0.2s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.4);
    z-index: 10;
    cursor: pointer;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const campusMap = document.getElementById('campusMap');
    if (!campusMap) return;

    const activities = <%- JSON.stringify(activities || []) %>;

    activities.forEach(activity => {
        if (activity.Lokasi && activity.Lokasi.koordinat_x && activity.Lokasi.koordinat_y) {
            const marker = document.createElement('div');
            marker.className = 'activity-marker';
            marker.style.left = `${activity.Lokasi.koordinat_x}%`;
            marker.style.top = `${activity.Lokasi.koordinat_y}%`;
            marker.dataset.id = activity.id_kegiatan;
            marker.title = `${activity.nama_kegiatan} (@ ${activity.Lokasi.nama_lokasi})`;
            campusMap.appendChild(marker);
        }
    });
});
</script>