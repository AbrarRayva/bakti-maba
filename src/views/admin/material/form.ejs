<%# views/admin/material/form.ejs %>

<div class="flex justify-between items-center mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-800"><%= title %></h1>
        <p class="text-gray-600">Isi detail materi di bawah ini.</p>
    </div>
    <a href="/admin/material" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded-lg transition-colors">
        Kembali ke Daftar
    </a>
</div>

<% if (message && message.length > 0) { %>
    <div class="mb-4 p-4 rounded-md bg-red-100 text-red-800">
        <%= message %>
    </div>
<% } %>

<div class="bg-white rounded-xl shadow p-6">
    <form action="/admin/material" method="POST" enctype="multipart/form-data">
        <div class="mb-4">
            <label for="judul_materi" class="block text-sm font-medium text-gray-700 mb-1">Judul Materi</label>
            <input type="text" id="judul_materi" name="judul_materi" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
        </div>
        <div class="mb-4">
            <label for="deskripsi_materi" class="block text-sm font-medium text-gray-700 mb-1">Deskripsi</label>
            <textarea id="deskripsi_materi" name="deskripsi_materi" rows="4" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
        </div>
        <div class="mb-6">
            <label for="file_path" class="block text-sm font-medium text-gray-700 mb-1">Upload File</label>
            <input type="file" id="file_path" name="file" required class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer">
        </div>
        <div class="flex justify-end">
            <button type="submit" class="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                Simpan Materi
            </button>
        </div>
    </form>
</div> 