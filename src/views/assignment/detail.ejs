<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style type="text/tailwindcss">
        @theme {
            --color-primary-purple: #6a0dad;
            --color-primary-purple-dark: #5a0a9d;
        }
    </style>
    <title>Detail Penugasan (Mahasiswa)</title>
</head>
<body class="bg-gray-100 flex">
    <%- include('../partials/sidebar_mahasiswa') %>
    <div class="ml-64 flex-1 p-8">
        <div class="bg-white rounded-xl shadow-md p-8 max-w-3xl mx-auto">
            <h1 class="text-3xl font-bold mb-2 text-gray-800"><%= assignment.title %></h1>
            <p class="text-purple-600 text-lg font-semibold mb-4"><%= assignment.dueDate %></p>
            <p class="text-gray-700 leading-relaxed mb-6"><%= assignment.description %></p>

            <% if (assignment.file) { %>
            <div class="border-t border-gray-200 pt-6 mt-6">
                <h3 class="text-xl font-semibold mb-4 text-gray-800">Instruksi Tugas:</h3>
                <div class="relative inline-block text-left mb-4">
                    <button type="button" class="inline-flex justify-center items-center p-2 text-gray-500 hover:text-gray-700 rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-purple" id="instruction-menu-button" aria-expanded="true" aria-haspopup="true">
                        <img src="/img/ellipsis-vertical.png" alt="Options" class="w-5 h-5">
                    </button>
                    <div class="origin-top-right absolute right-0 mt-2 w-40 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden" role="menu" aria-orientation="vertical" aria-labelledby="instruction-menu-button" tabindex="-1">
                        <div class="py-1" role="none">
                            <% if (assignment.file.startsWith('/uploads/')) { %>
                                <a href="<%= assignment.file %>" target="_blank" class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 flex items-center">
                                    <img src="/img/eye-icon.png" alt="Open" class="w-4 h-4 mr-2"> Open
                                </a>
                                <a href="<%= assignment.file %>" download class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 flex items-center">
                                    <img src="/img/download-icon.png" alt="Download" class="w-4 h-4 mr-2"> Download
                                </a>
                            <% } else { %>
                                <a href="<%= assignment.file %>" target="_blank" class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 flex items-center">
                                    <img src="/img/eye-icon.png" alt="Open Link" class="w-4 h-4 mr-2"> Open Link
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% if (assignment.file.startsWith('/uploads/')) { %>
                    <p class="text-gray-600 flex items-center mb-4">
                        <img src="/img/icon-doc.png" alt="Doc Icon" class="w-5 h-5 mr-3">
                        <a href="<%= assignment.file %>" target="_blank" download class="text-blue-500 hover:underline">
                            Instruksi Tugas.<%= assignment.file.split('.').pop() %>
                        </a>
                    </p>
                <% } else { %>
                    <p class="text-gray-600 flex items-center mb-4">
                        <img src="/img/icon-link.png" alt="Link Icon" class="w-5 h-5 mr-3">
                        <a href="<%= assignment.file %>" target="_blank" class="text-blue-500 hover:underline">
                            <%= assignment.file %>
                        </a>
                    </p>
                <% } %>
            </div>
            <% } %>

            <div class="bg-gray-50 rounded-lg p-6 mt-6 border border-gray-200">
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-xl font-semibold text-gray-800">Attach</h3>
                    <div class="relative inline-block text-left">
                        <button type="button" class="attach-button inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-purple" id="attach-menu-button" aria-expanded="true" aria-haspopup="true">
                            Attach <img src="/img/ellipsis-vertical.png" alt="Options" class="w-4 h-4 ml-2 -mr-1">
                        </button>
                        <div class="origin-top-right absolute right-0 mt-2 w-40 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 hidden" role="menu" aria-orientation="vertical" aria-labelledby="attach-menu-button" tabindex="-1">
                            <div class="py-1" role="none">
                                <a href="/assignment/<%= assignment.id %>/submit?type=link" class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 flex items-center">
                                    <img src="/img/link-icon.png" alt="Link" class="w-4 h-4 mr-2"> Link
                                </a>
                                <a href="/assignment/<%= assignment.id %>/submit?type=file" class="text-gray-700 block px-4 py-2 text-sm hover:bg-gray-100 flex items-center">
                                    <img src="/img/file-icon.png" alt="File" class="w-4 h-4 mr-2"> Choose File
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                <% if (studentSubmissions && studentSubmissions.length > 0) { %>
                    <% // Asumsi hanya satu submission per tugas per mahasiswa, ambil yang paling baru %>
                    <% const latestSubmission = studentSubmissions[studentSubmissions.length - 1]; %>
                    <div class="bg-white p-4 rounded-lg shadow-sm mb-4">
                        <p class="font-semibold text-gray-800">Submitted at: <%= new Date(latestSubmission.submittedAt).toLocaleString() %></p>
                        <% if (latestSubmission.file && latestSubmission.file.startsWith('/uploads/submissions/')) { %>
                            <p class="text-gray-600 flex items-center">
                                <img src="/img/icon-doc.png" alt="Doc Icon" class="w-4 h-4 mr-2">
                                File: <a href="<%= latestSubmission.file %>" target="_blank" download class="text-blue-500 hover:underline">Unduh Submission</a>
                            </p>
                        <% } else if (latestSubmission.submissionLink) { %>
                            <p class="text-gray-600 flex items-center">
                                <img src="/img/icon-link.png" alt="Link Icon" class="w-4 h-4 mr-2">
                                Link: <a href="<%= latestSubmission.submissionLink %>" target="_blank" class="text-blue-500 hover:underline"><%= latestSubmission.submissionLink %></a>
                            </p>
                        <% } %>
                        <% if (latestSubmission.submissionText) { %>
                            <p class="text-gray-600 mt-2">Catatan: <%= latestSubmission.submissionText %></p>
                        <% } %>
                    </div>
                    <div class="flex justify-end space-x-4 mt-6">
                        <button class="submit-btn bg-primary-purple hover:bg-primary-purple-dark text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors"
                            onclick="window.location.href='/assignment/<%= assignment.id %>/submit';">
                            Submit </button>
                        <form action="/assignment/submission/<%= latestSubmission.id %>/delete" method="POST" class="inline">
                            <button type="submit" class="delete-btn bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors"
                                onclick="return confirm('Apakah Anda yakin ingin menghapus submission Anda?');">
                                Delete Submission
                            </button>
                        </form>
                    </div>
                <% } else { %>
                    <p class="text-gray-600 text-center py-4">Silakan klik 'Attach' untuk mengirimkan tugas Anda.</p>
                    <div class="flex justify-end space-x-4 mt-6">
                        <button class="submit-btn bg-primary-purple hover:bg-primary-purple-dark text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors"
                            onclick="window.location.href='/assignment/<%= assignment.id %>/submit';">
                            Submit
                        </button>
                        </div>
                <% } %>
            </div>

            <div class="mt-8 text-center">
                <a href="/assignment" class="text-blue-500 hover:underline">Kembali ke Daftar Penugasan</a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Function to toggle dropdown visibility
            function toggleDropdown(buttonId) {
                const button = document.getElementById(buttonId);
                if (button) {
                    const dropdownContent = button.nextElementSibling;
                    dropdownContent.classList.toggle('hidden');
                }
            }

            // Function to close all dropdowns
            function closeAllDropdowns() {
                document.querySelectorAll('.dropdown-content, .attach-dropdown-content').forEach(dropdown => {
                    dropdown.classList.add('hidden');
                });
            }

            // Event listener for instruction dropdown button
            const instructionMenuButton = document.getElementById('instruction-menu-button');
            if (instructionMenuButton) {
                instructionMenuButton.addEventListener('click', (event) => {
                    closeAllDropdowns(); // Close others first
                    toggleDropdown('instruction-menu-button');
                    event.stopPropagation(); // Prevent document click from closing immediately
                });
            }

            // Event listener for attach dropdown button
            const attachMenuButton = document.getElementById('attach-menu-button');
            if (attachMenuButton) {
                attachMenuButton.addEventListener('click', (event) => {
                    closeAllDropdowns(); // Close others first
                    toggleDropdown('attach-menu-button');
                    event.stopPropagation(); // Prevent document click from closing immediately
                });
            }

            // Close dropdowns when clicking outside
            document.addEventListener('click', (event) => {
                closeAllDropdowns();
            });

            // Prevent dropdowns from closing when clicking inside them
            document.querySelectorAll('.dropdown-content, .attach-dropdown-content').forEach(dropdown => {
                dropdown.addEventListener('click', (event) => {
                    event.stopPropagation();
                });
            });
        });
    </script>
</body>
</html>