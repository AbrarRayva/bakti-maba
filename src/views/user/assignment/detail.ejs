<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style type="text/tailwindcss">
        @theme {
            --color-primary-purple: #6a0dad;
            --color-primary-purple-dark: #5a0a9d;
        }
    </style>
    <title>Detail Penugasan (Mahasiswa)</title>
</head>
<body class="bg-gray-100 flex">
    <div class="ml-64 flex-1 p-8">
        <div class="bg-white rounded-xl shadow-md p-8 max-w-3xl mx-auto">
            <div class="mb-8">
                <a href="/assignment" class="text-blue-600 hover:underline mb-4 inline-block">&larr; Kembali ke Daftar Tugas</a>
                <h1 class="text-3xl font-bold text-gray-800"><%= assignment.nama_tugas %></h1>
                <p class="text-gray-600 mt-2"><%= assignment.deskripsi %></p>
                <div class="text-sm text-gray-500 mt-2">
                    <span class="font-semibold">Tenggat:</span> 
                    <%= assignment.deadline ? new Date(assignment.deadline).toLocaleString('id-ID') : 'Tidak ditentukan' %>
                </div>
                <% if (assignment.file_path) { %>
                    <div class="mt-4">
                        <span class="font-semibold text-sm">Lampiran:</span>
                        <% if (assignment.file_path.startsWith('http')) { %>
                            <a href="<%= assignment.file_path %>" target="_blank" class="text-blue-600 hover:underline text-sm ml-1">Buka Link</a>
                        <% } else { %>
                            <a href="<%= assignment.file_path %>" target="_blank" class="text-blue-600 hover:underline text-sm ml-1">Unduh File</a>
                        <% } %>
                    </div>
                <% } %>
            </div>

            <!-- Submission Section -->
            <div class="bg-white rounded-xl shadow p-6 mb-8">
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Pengumpulan Tugas Anda</h2>
                <% if (userSubmission) { %>
                    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
                        <p class="font-bold">Anda telah mengumpulkan tugas ini.</p>
                        <p>Dikumpulkan pada: <%= new Date(userSubmission.waktu_pengumpulan).toLocaleString('id-ID') %></p>
                        <% if (userSubmission.link_submission) { %>
                             <p>Link: <a href="<%= userSubmission.link_submission %>" class="underline" target="_blank"><%= userSubmission.link_submission %></a></p>
                        <% } %>
                        <% if (userSubmission.file_submission) { %>
                             <p>File: <a href="<%= userSubmission.file_submission %>" class="underline" target="_blank">Lihat File</a></p>
                        <% } %>
                    </div>
                <% } %>

                <form action="/assignment/<%= assignment.id_tugas %>/submit" method="POST" enctype="multipart/form-data">
                    <div class="mb-6">
                        <label class="block text-gray-700 text-sm font-bold mb-2">Lampirkan Pengumpulan:</label>
                        <p class="text-xs text-gray-500 mb-2">Pilih salah satu, unggah file atau berikan link. Jika Anda mengirimkan lagi, pengumpulan sebelumnya akan diperbarui.</p>

                        <div class="mb-3">
                            <label for="file" class="block text-gray-700 text-sm font-bold mb-2">Upload File:</label>
                            <input type="file" id="file" name="file" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 cursor-pointer">
                        </div>
                        <div class="text-center text-gray-500 my-2">atau</div>
                        <div>
                            <label for="submissionLink" class="block text-gray-700 text-sm font-bold mb-2">Link Pengumpulan:</label>
                            <input type="url" id="submissionLink" name="submissionLink" value="<%= userSubmission ? userSubmission.link_submission : '' %>"
                                class="shadow appearance-none border rounded w-full py-3 px-4 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                placeholder="https://example.com/submission">
                        </div>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:shadow-outline transition-colors">
                            <%= userSubmission ? 'Perbarui Pengumpulan' : 'Kumpulkan Tugas' %>
                        </button>
                    </div>
                </form>

                <% if (userSubmission) { %>
                    <form action="/submission/<%= userSubmission.id_pengumpulan %>/delete" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus pengumpulan ini? Tindakan ini tidak dapat diurungkan.');" class="mt-4 text-right">
                        <button type="submit" class="text-red-500 hover:text-red-700 hover:underline text-sm">Hapus Pengumpulan</button>
                    </form>
                <% } %>
            </div>

            <div class="mt-8 text-center">
                <a href="/assignment" class="text-blue-500 hover:underline">Kembali ke Daftar Penugasan</a>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Function to toggle dropdown visibility
            function toggleDropdown(buttonId) {
                const button = document.getElementById(buttonId);
                if (button) {
                    const dropdownContent = button.nextElementSibling;
                    dropdownContent.classList.toggle('hidden');
                }
            }

            // Function to close all dropdowns
            function closeAllDropdowns() {
                document.querySelectorAll('.dropdown-content, .attach-dropdown-content').forEach(dropdown => {
                    dropdown.classList.add('hidden');
                });
            }

            // Event listener for instruction dropdown button
            const instructionMenuButton = document.getElementById('instruction-menu-button');
            if (instructionMenuButton) {
                instructionMenuButton.addEventListener('click', (event) => {
                    closeAllDropdowns(); // Close others first
                    toggleDropdown('instruction-menu-button');
                    event.stopPropagation(); // Prevent document click from closing immediately
                });
            }

            // Event listener for attach dropdown button
            const attachMenuButton = document.getElementById('attach-menu-button');
            if (attachMenuButton) {
                attachMenuButton.addEventListener('click', (event) => {
                    closeAllDropdowns(); // Close others first
                    toggleDropdown('attach-menu-button');
                    event.stopPropagation(); // Prevent document click from closing immediately
                });
            }

            // Close dropdowns when clicking outside
            document.addEventListener('click', (event) => {
                closeAllDropdowns();
            });

            // Prevent dropdowns from closing when clicking inside them
            document.querySelectorAll('.dropdown-content, .attach-dropdown-content').forEach(dropdown => {
                dropdown.addEventListener('click', (event) => {
                    event.stopPropagation();
                });
            });
        });
    </script>
</body>
</html>