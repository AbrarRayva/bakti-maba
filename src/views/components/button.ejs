<!-- Button Component -->
<button
    type="<%= typeof type !== 'undefined' ? type : 'submit' %>"
    class="block w-full px-8 py-2 bg-gray-500 border border-gray-300 rounded-2xl text-sm text-white font-bold focus:outline-none focus:ring-2 focus:ring-gray-300 focus:border-gray-400 hover:bg-gray-600 transition-colors duration-200"
    <% if (typeof id !== 'undefined') { %>id="<%= id %>"<% } %>
    <% if (typeof onclick !== 'undefined') { %>onclick="<%= onclick %>"<% } %>
>
    <%= text %>
</button> 